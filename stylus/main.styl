whiteish = #FFEDDB
pink = #E96F92
blackish = #001D2E
green = #54fad4

font-sans='Avenir Next','Segoe ui',Ubuntu,sans-serif;
font-serif=Georgia,serif;

body
  background blackish
  margin 0
  padding 0
  color blackish
  font-family font-serif
  font-size 20px
  line-height 1.6

nav
  position absolute
  width 100%
  z-index 2
  padding-top 20px
  padding-bottom 20px
  text-align center
  color blackish

.Nav-link
  color whiteish
  font-family font-sans
  text-decoration none
  font-weight bold
  padding 10px 40px
  margin 0 10px

  span
    display inline-block
    padding-bottom 10px
    position relative
    &::after
      content ''
      position absolute
      bottom 0
      left 0
      right 0
      height 3px
      display block
      background green
      transform scale(1,0) translate3d(0,-10px,0)
      transition transform 80ms ease-in

  &:first-child
    margin-left 0

  &:last-child
    margin-right 0

  &:hover span
    transition color 80ms
    color green
    &::after
      transition transform 80ms ease-out
      transform scale(1,1) translate3d(0,0,0);

.text-center
  text-align center

absolute-fill()
  position absolute
  top 0
  left 0
  right 0
  bottom 0

.Header
  position relative
  min-height 300px
  height 75vh
  margin-bottom 90px

.Scene
  absolute-fill()

.Scene-sky
  absolute-fill()
  blackish
  
.Scene-stars
  position absolute
  top 0
  left 0 
  width 100%
  min-height 100vh

.Center
  position absolute
  top 50%
  left 50%
  transform translate(-50%,-50%)
  background green
  height 1vh
  width 1vh

.Title
  font-family font-sans 
  color green
  position absolute
  top 50%
  width 100%
  text-align center
  text-transform uppercase
  margin-top -50px
  letter-spacing 0.2em
  font-size 45px
  line-height 1.4
  font-weight bold

.Title-big
  display block
  height 1em
  margin-bottom 0.2em

.Title-small
  display block
  font-size 0.6em
  color whiteish
  height 1em
  letter-spacing 0.2em
  margin-bottom 15px

.Title-Center 
  position relative
  width 0
  margin-left auto
  margin-right auto

.Title-Center-left
  position absolute
  right 10px
  margin-right -0.2em

.Title-Center-right
  position absolute
  left 10px

.container
  width 700px
  margin 0 auto
